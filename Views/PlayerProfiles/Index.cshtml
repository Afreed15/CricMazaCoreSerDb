@model IEnumerable<CricMazaServerDb.Models.PlayerProfile>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HighestScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BestBowling)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.T)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HighestScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BestBowling)
            </td>
            <td>
                <img src="@("/Images/"+item.P.Img)" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.T.Tname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Profileid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Profileid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Profileid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
