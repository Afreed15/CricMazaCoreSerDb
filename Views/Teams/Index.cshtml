@model IEnumerable<CricMazaServerDb.Models.Teams>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teamlogo)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Tname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Towner)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@("/Images/"+item.Teamlogo)" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Towner)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.Tid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Tid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Tid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
