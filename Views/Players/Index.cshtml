@model IEnumerable<CricMazaServerDb.Models.Players>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <table class="table table-dark table-borderless">
        <thead>
            <tr>
                <th>
                    Profile Pic
                </th>
                <th>
                    Name
                </th>
                <th>
                    Team
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td>
                    <img src="@("/Images/"+item.Img)" width="100" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tplayer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.T.Tname)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Pid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Pid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Pid">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>